<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="ps-hb-projectmanagement">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.prokopovich.projectmanagement.model.Account</class>
        <class>com.prokopovich.projectmanagement.model.AccountAction</class>
        <class>com.prokopovich.projectmanagement.model.Action</class>
        <class>com.prokopovich.projectmanagement.model.Attachment</class>
        <class>com.prokopovich.projectmanagement.model.Comment</class>
        <class>com.prokopovich.projectmanagement.model.Project</class>
        <class>com.prokopovich.projectmanagement.model.ProjectAction</class>
        <class>com.prokopovich.projectmanagement.model.Task</class>
        <class>com.prokopovich.projectmanagement.model.TaskAction</class>
        <class>com.prokopovich.projectmanagement.model.User</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/project_management_db"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="admin"/>
            <property name="hibernate.connection.password" value="admin"/>
            <property name="hibernate.c3p0.min_size" value="5" />
            <property name="hibernate.c3p0.max_size" value="20" />
            <property name="hibernate.c3p0.timeout" value="300" />
        </properties>
    </persistence-unit>
</persistence>